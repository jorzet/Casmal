<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/background">

	<TextView
		android:id="@+id/tv_payment_title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="30dp"
		android:text="@string/choose_payment_method_text"
		android:textColor="@color/black"
		android:textSize="25sp"/>

	<RelativeLayout
		android:id="@+id/rl_google_pay_container"
		android:layout_width="wrap_content"
		android:layout_height="80dp"
		android:layout_alignParentLeft="true"
		android:layout_marginLeft="30dp"
		android:layout_marginTop="100dp"
		android:layout_below="@+id/tv_payment_title">

		<ImageView
			android:id="@+id/iv_google_pay"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:layout_marginStart="20dp"
			android:layout_marginLeft="20dp"
			android:src="@drawable/google_pay_mark_icon" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/iv_google_pay"
			android:layout_centerHorizontal="true"
			android:text="@string/google_pay_text"
			android:textColor="@color/black"
			android:textSize="20sp" />

	</RelativeLayout>

	<RelativeLayout
		android:id="@+id/rl_cash_container"
		android:layout_width="wrap_content"
		android:layout_height="80dp"
		android:layout_alignParentRight="true"
		android:layout_marginEnd="30dp"
		android:layout_marginTop="100dp"
		android:layout_below="@+id/tv_payment_title">

		<ImageView
			android:id="@+id/iv_cash"
			android:layout_width="96dp"
			android:layout_height="60dp"
			android:layout_centerHorizontal="true"
			android:layout_marginStart="20dp"
			android:layout_marginEnd="20dp"
			android:src="@drawable/payment_method_cash_icon" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/iv_cash"
			android:layout_marginTop="-10dp"
			android:layout_centerHorizontal="true"
			android:text="@string/cash_text"
			android:textColor="@color/black"
			android:textSize="20sp" />

	</RelativeLayout>



	<TextView
		android:id="@+id/tv_subscription"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_marginBottom="30dp"
		android:layout_marginLeft="15dp"
		android:layout_marginRight="15dp"
		android:layout_centerHorizontal="true"
		android:gravity="center"
		android:lines="2"
		android:text="@string/subscription_text"
		android:textColor="@color/black"
		android:textSize="25sp"/>


</RelativeLayout>