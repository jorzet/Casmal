<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/background">

	<RelativeLayout
		android:id="@+id/toolbar_question"
		android:layout_width="match_parent"
		android:layout_height="50dp">

		<ImageView
			android:id="@+id/iv_random_question"
			android:layout_width="30dp"
			android:layout_height="30dp"
			android:layout_centerVertical="true"
			android:layout_marginLeft="5dp"
			android:background="@drawable/random_question_button"/>

		<TextView
			android:id="@+id/tv_module_number"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_toRightOf="@+id/iv_random_question"
			android:layout_marginStart="10dp"
			android:text=""
			android:textColor="@color/black"
			android:textSize="16sp"
			android:textStyle="bold"
			android:layout_marginLeft="10dp"/>

		<ImageView
			android:id="@+id/iv_vertical_line"
			android:layout_width="1dp"
			android:layout_height="30dp"
			android:layout_centerVertical="true"
			android:layout_toEndOf="@+id/tv_module_number"
			android:layout_marginStart="10dp"
			android:background="@color/black"
			android:layout_marginLeft="10dp"
			android:layout_toRightOf="@+id/tv_module_number"/>

		<TextView
			android:id="@+id/tv_question_type_text"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:ellipsize="end"
			android:lines="1"
			android:text=""
			android:textColor="@color/black"
			android:textSize="15sp"
			android:layout_toRightOf="@+id/iv_vertical_line"
			android:layout_toLeftOf="@+id/rl_suggestions"
			android:layout_toEndOf="@+id/iv_vertical_line"
			android:layout_toStartOf="@+id/rl_suggestions"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="5dp"
			android:layout_marginStart="10dp"
			android:layout_marginEnd="5dp"/>

		<RelativeLayout
			android:id="@+id/rl_suggestions"
			android:layout_width="wrap_content"
			android:layout_height="30dp"
			android:layout_centerVertical="true"
			android:background="@drawable/questions_suggestions_button_background"
			android:layout_toLeftOf="@+id/rl_show_questions"
			android:layout_toStartOf="@+id/rl_show_questions"
			android:layout_marginRight="10dp">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:text="  S U G E R E N C I A S  "
				android:textSize="9sp"
				android:textColor="@color/colorWhite"/>

		</RelativeLayout>

		<RelativeLayout
			android:id="@+id/rl_show_questions"
			android:layout_width="wrap_content"
			android:layout_height="30dp"
			android:layout_centerVertical="true"
			android:layout_toStartOf="@+id/iv_close_question"
			android:background="@drawable/next_question_button_background"
			android:layout_toLeftOf="@+id/iv_close_question">

			<TextView
                android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:text="   P R E G U N T A S   "
				android:textSize="9sp"
				android:textColor="@color/colorWhite"/>

		</RelativeLayout>

		<RelativeLayout
			android:id="@+id/iv_close_question"
			android:layout_width="50dp"
			android:layout_height="match_parent"
			android:layout_alignParentEnd="true" android:layout_alignParentRight="true">

			<ImageView
				android:layout_width="20dp"
				android:layout_height="20dp"
				android:layout_centerVertical="true"
				android:layout_centerHorizontal="true"
				android:src="@drawable/close_icon"/>

		</RelativeLayout>

	</RelativeLayout>

	<ProgressBar
		android:id="@+id/pb_questions_progress"
		style="?android:attr/progressBarStyleHorizontal"
		android:layout_width="fill_parent"
		android:layout_height="4dp"
		android:layout_below="@+id/toolbar_question"
		android:indeterminate="false"
		android:maxHeight="4dip"
		android:minHeight="4dip"
		android:progressDrawable="@drawable/greenprogress" />

	<FrameLayout
		android:id="@+id/question_fragment_container"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_below="@+id/pb_questions_progress"
		android:layout_above="@+id/bottom_bar" />

	<RelativeLayout
		android:id="@+id/bottom_bar"
		android:layout_width="match_parent"
		android:layout_height="@dimen/question_bottom_bar_height"
		android:layout_alignParentBottom="true"
		android:background="@color/bottom_bar_background_color">

		<RelativeLayout
			android:id="@+id/btn_show_answer"
			android:layout_width="150dp"
			android:layout_height="30dp"
			android:layout_centerVertical="true"
			android:layout_marginStart="20dp"
			android:background="@drawable/show_answer_button_background"
			android:layout_marginLeft="20dp">

			<TextView
                android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerHorizontal="true"
				android:layout_centerVertical="true"
				android:text="R E S P U E S T A"
				android:textSize="10sp"
				android:textColor="@color/colorWhite"/>

		</RelativeLayout>


		<RelativeLayout
			android:id="@+id/btn_next_question"
			android:layout_width="150dp"
			android:layout_height="30dp"
			android:layout_centerVertical="true"
			android:layout_alignParentRight="true"
			android:layout_marginRight="20dp"
			android:background="@drawable/next_question_button_background"
			android:layout_alignParentEnd="true"
			android:layout_marginEnd="20dp">

			<TextView
                android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerHorizontal="true"
				android:layout_centerVertical="true"
				android:text="S I G U I E N T E"
				android:textSize="10sp"
				android:textColor="@color/colorWhite"/>

		</RelativeLayout>
		
	</RelativeLayout>

	<FrameLayout
		android:id="@+id/progressBarHolder"
		android:animateLayoutChanges="true"
		android:alpha="0.4"
		android:background="#000000"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:visibility="gone">

		<ProgressBar
			style="?android:attr/progressBarStyleLarge"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:indeterminate="true"
			android:layout_gravity="center"
			android:indeterminateTint="@color/blue"/>

	</FrameLayout>

	<FrameLayout
		android:id="@+id/complete_question_fragment_container"
		android:layout_width="match_parent"
		android:layout_height="match_parent"/>

</RelativeLayout>