<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:background="@color/question_background_color">

	<TextView
		android:id="@+id/tv_text"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:textAlignment="center"
		android:gravity="center"
		android:layout_above="@id/ll_answers"
		android:layout_margin="10dp"
		android:layout_gravity="center"/>

	<LinearLayout
		android:id="@+id/ll_answers"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:background="@color/answer_background_color"
		android:layout_alignParentBottom="true">

		<RelativeLayout
			android:id="@+id/option_true"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:minHeight="@dimen/min_height_option"
			android:layout_marginTop="10dp"
			android:layout_marginStart="60dp"
			android:layout_marginEnd="60dp"
			android:background="@drawable/answer_unselected_option_background" >

			<TextView
				android:id="@+id/tv_option_true"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/option_true_text"
				android:textSize="20sp"
				android:textColor="@color/colorWhite"
				android:textAlignment="center"
				android:layout_centerInParent="true"/>

		</RelativeLayout>

		<RelativeLayout
			android:id="@+id/option_false"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:minHeight="@dimen/min_height_option"
			android:layout_marginStart="60dp"
			android:layout_marginEnd="60dp"
			android:layout_marginTop="@dimen/margin_anwer_button_top"
			android:layout_marginBottom="10dp"
			android:background="@drawable/answer_unselected_option_background">

			<TextView
				android:id="@+id/tv_option_false"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/option_false_text"
				android:textSize="20sp"
				android:textColor="@color/colorWhite"
				android:textAlignment="center"
				android:layout_centerInParent="true"/>

		</RelativeLayout>

	</LinearLayout>

</RelativeLayout>